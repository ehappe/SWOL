<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shredware.swol"
    android:installLocation="auto" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="SWOL"
        android:largeHeap="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name="com.shredware.swol.activity.MainActivity"
            android:label="SWOL">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shredware.swol.activity.create_workout.ExerciseTypeListActivity"
            android:label="@string/title_exercisetype_list"
            android:parentActivityName="com.shredware.swol.activity.MainActivity"
            android:icon="@drawable/icon_dumbbell" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shredware.swol.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.create_workout.ExerciseTypeDetailActivity"
            android:label="@string/title_exercisetype_detail"
            android:parentActivityName=".ExerciseTypeListActivity" 
            android:icon="@drawable/icon_dumbbell" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ExerciseTypeListActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.start_training.FExListActivity"
            android:label="@string/title_exercise_list"
            android:parentActivityName="com.shredware.swol.activity.MainActivity"
            android:windowSoftInputMode="stateVisible"
            android:icon="@drawable/icon_dumbbell" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shredware.swol.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.start_training.FExDetailActivity"
            android:label="@string/title_exercise_detail"
            android:parentActivityName=".ExerciseListActivity"
            android:windowSoftInputMode="stateVisible"
            android:icon="@drawable/icon_dumbbell" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ExerciseListActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.manage_workouts.WorkoutListActivity"
            android:label="@string/title_workout_list"
            android:parentActivityName="com.shredware.swol.activity.MainActivity"
            android:icon="@drawable/icon_dumbbell" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shredware.swol.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.manage_workouts.WorkoutDetailActivity"
            android:label="@string/title_workout_detail"
            android:parentActivityName="com.shredware.swol.activity.manage_workouts.WorkoutListActivity"
            android:icon="@drawable/icon_dumbbell" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WorkoutListActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:icon="@drawable/icon_dumbbell" >
        </activity>
        <activity
            android:name="com.shredware.swol.activity.create_exercise.CreateExerciseActivity"
            android:label="@string/create_exercise_activity_title"
            android:icon="@drawable/icon_dumbbell" >
        </activity>
		<activity android:name="org.acra.CrashReportDialog"
        	android:theme="@android:style/Theme.Dialog"
        	android:launchMode="singleInstance"
        	android:excludeFromRecents="true"
        	android:finishOnTaskLaunch="true" />
		
        <service android:enabled="true" android:name="com.shredware.swol.activity.settings.sync.OpenTrainingSyncService" />
        
    </application>

</manifest>
