<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.skubware.opentraining"
    android:versionCode="20"
    android:versionName="0.5.2" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="SWOL"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shredware.swol.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shredware.swol.activity.create_workout.ExerciseTypeListActivity"
            android:label="@string/title_exercisetype_list"
            android:parentActivityName="com.shredware.swol.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shredware.swol.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.create_workout.ExerciseTypeDetailActivity"
            android:label="@string/title_exercisetype_detail"
            android:parentActivityName=".activity.create_workout.ExerciseTypeListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.create_workout.ExerciseTypeListActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.start_training.FExListActivity"
            android:label="@string/title_exercise_list"
            android:parentActivityName="com.shredware.swol.activity.MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shredware.swol.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.start_training.FExDetailActivity"
            android:label="@string/title_exercise_detail"
            android:parentActivityName=".ExerciseListActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ExerciseListActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.manage_workouts.WorkoutListActivity"
            android:label="@string/title_workout_list"
            android:parentActivityName="com.shredware.swol.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.shredware.swol.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.manage_workouts.WorkoutDetailActivity"
            android:label="@string/title_workout_detail"
            android:parentActivityName="com.shredware.swol.activity.manage_workouts.WorkoutListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.manage_workouts.WorkoutListActivity" />
        </activity>
        <activity
            android:name="com.shredware.swol.activity.manage_workouts.ShowWorkoutHTMLActivity"
            android:label="@string/title_activity_show_workout_html" >
        </activity>
        <activity
            android:name="com.shredware.swol.activity.settings.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>