<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

   <ImageView
       android:id="@+id/imageView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:cropToPadding="true"
       android:scaleType="centerCrop"
       android:src="@drawable/navigation_bg" />

   <Button
       android:id="@+id/train_button"
       android:layout_width="350dp"
       android:layout_height="220dp"
       android:layout_below="@+id/textView1"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="50dp"
       android:background="@drawable/train_button_border"
       android:alpha="0.7"
       android:text="Train"
       android:textSize="100dp"
       android:textColor="#ff0000"/>

   <Button
       android:id="@+id/create_workout_button"
       android:layout_width="350dp"
       android:layout_height="50dp"
       android:layout_below="@+id/textView1"
       android:layout_centerHorizontal="true"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="130dp"
       android:background="@drawable/button_border"
       android:alpha="0.7"
       android:text="Create Workout"
       android:textSize="25dp"
       android:textColor="#FFFFFF"/>

   <Button
       android:id="@+id/manage_workouts_button"
       android:layout_width="350dp"
       android:layout_height="50dp"
       android:layout_below="@+id/textView1"
       android:layout_centerHorizontal="true"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="75dp"
       android:background="@drawable/button_border"
       android:alpha="0.7"
       android:text="Manage Workouts"
       android:textSize="25dp"
       android:textColor="#FFFFFF"/>

   <Button
       android:id="@+id/app_settings_button"
       android:layout_width="350dp"
       android:layout_height="50dp"
       android:layout_below="@+id/textView1"
       android:layout_centerHorizontal="true"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="20dp"
       android:background="@drawable/button_border"
       android:alpha="0.7"
       android:text="App Settings"
       android:textSize="25dp"
       android:textColor="#FFFFFF"/>

</RelativeLayout>